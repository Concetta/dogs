<p id="notice"><%= notice %></p>
<!-- Page Content -->
<div class="container">
  <div class="row">
    <% @videos.each do |video| %>
      <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
        <div class="card h-100">
          <a href="#"><img class="card-img-top" src=""  alt=""></a>
          <%= link_to 'Show', video %>
          <div class="card-body">
            <h4 class="card-title"><a href="#"> <%= video.title %></a></h4>
            <p class="card-text"><%= video.description %></p>
            <% if user_signed_in? && current_user.voted_for?(video) %>
              <%= link_to dislike_video_path(video), method: :put do %>
                Unlike
              <% end %>
              <% else %>
                <%= link_to like_video_path(video), method: :put do %>
                Like
                <% end %>
            <% end %>
            <div><%= video.votes_for.size %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- /.row -->
  <div>
    <!-- Pagination -->
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">1</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">2</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">3</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </div>

</div>
<!-- /.container -->
